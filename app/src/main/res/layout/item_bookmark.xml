<?xml version="1.0" encoding="utf-8"?>
<com.i7play.supertian.view.MySwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:background="?selectableItemBackground"
    android:layout_height="100px">

    <RelativeLayout
        android:id="@+id/subroot"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivImg"
            android:layout_width="60px"
            android:layout_height="75px"
            android:background="@drawable/defaultcover"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:layout_toRightOf="@+id/ivImg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大主宰"
                android:textColor="@color/title"
                android:textSize="15px" />

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="大主宰"
                android:textColor="@color/subtitle"
                android:textSize="12px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最近更新:  "
                    android:textColor="@color/subtitle"
                    android:textSize="12px" />

                <TextView
                    android:id="@+id/tvNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="12px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上次阅读:  "
                    android:textColor="@color/subtitle"
                    android:textSize="12px" />

                <TextView
                    android:id="@+id/tvLast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="12px" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvDel"
        android:layout_width="100px"
        android:layout_height="100px"
        android:background="@color/red"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/white" />
</com.i7play.supertian.view.MySwipeMenuLayout>